<body>
 <%- include('../Navbar/header.ejs') %>
 <div class="container mx-auto col-lg-8 pt-5">
    <% if (message!="") { %>
        <div class="alert alert-success"><%= message %></div>
       <% } %>

       <div class="text-dark fw-bold mb-5">Create Account with us at HoneyWealth Academy</div>
     <form action="/signup" method="post">
<input type="text" class="form-control my-2" placeholder="Enter First Name" name="firstname">
<input type="text" class="form-control my-2" placeholder="Enter Last Name" name="lastname">
<input type="text" class="form-control my-2" placeholder="Enter Email" name="email">
<input type="text" class="form-control my-2" placeholder="Enter Password" name="password">
<button type="submit" class="btn btn-success">Sign Up</button>
</form>
 </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
